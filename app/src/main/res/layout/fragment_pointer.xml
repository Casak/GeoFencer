<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/pointer_anchor"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="3dp"
        android:rotation="180"
        android:src="@drawable/pointer_anchor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pointer_left_red"
            android:layout_width="@dimen/pointer_drawable_width"
            android:layout_height="@dimen/pointer_drawable_height"
            android:layout_marginBottom="@dimen/pointer_margin_top"
            android:layout_marginRight="@dimen/pointer_margin_right"
            android:layout_marginTop="@dimen/pointer_margin_top"
            android:background="@drawable/pointer_red"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/pointer_red"
            android:textColor="@android:color/white"
            android:textSize="@dimen/zero_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pointer_left_orange_dark"
            android:layout_width="@dimen/pointer_drawable_width"
            android:layout_height="@dimen/pointer_drawable_height"
            android:layout_marginBottom="@dimen/pointer_margin_top"
            android:layout_marginRight="@dimen/pointer_margin_right"
            android:layout_marginTop="@dimen/pointer_margin_top"
            android:background="@drawable/pointer_orange_dark"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/pointer_dark_orange"
            android:textColor="@android:color/white"
            android:textSize="@dimen/zero_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pointer_left_orange"
            android:layout_width="@dimen/pointer_drawable_width"
            android:layout_height="@dimen/pointer_drawable_height"
            android:layout_marginBottom="@dimen/pointer_margin_top"
            android:layout_marginRight="@dimen/pointer_margin_right"
            android:layout_marginTop="@dimen/pointer_margin_top"
            android:background="@drawable/pointer_orange"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/pointer_orange"
            android:textColor="@android:color/white"
            android:textSize="@dimen/zero_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pointer_left_yellow_dark"
            android:layout_width="@dimen/pointer_drawable_width"
            android:layout_height="@dimen/pointer_drawable_height"
            android:layout_marginBottom="@dimen/pointer_margin_top"
            android:layout_marginRight="@dimen/pointer_margin_right"
            android:layout_marginTop="@dimen/pointer_margin_top"
            android:background="@drawable/pointer_yellow_dark"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/pointer_dark_yellow"
            android:textColor="@android:color/white"
            android:textSize="@dimen/zero_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pointer_left_yellow"
            android:layout_width="@dimen/pointer_drawable_width"
            android:layout_height="@dimen/pointer_drawable_height"
            android:layout_marginBottom="@dimen/pointer_margin_top"
            android:layout_marginRight="@dimen/pointer_margin_right"
            android:layout_marginTop="@dimen/pointer_margin_top"
            android:background="@drawable/pointer_yellow"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/pointer_yellow"
            android:textColor="@android:color/white"
            android:textSize="@dimen/zero_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pointer_left_green_dark"
            android:layout_width="@dimen/pointer_drawable_width"
            android:layout_height="@dimen/pointer_drawable_height"
            android:layout_marginBottom="@dimen/pointer_margin_top"
            android:layout_marginRight="@dimen/pointer_margin_right"
            android:layout_marginTop="@dimen/pointer_margin_top"
            android:background="@drawable/pointer_green_dark"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/pointer_dark_green"
            android:textColor="@android:color/white"
            android:textSize="@dimen/zero_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pointer_left_green"
            android:layout_width="@dimen/pointer_drawable_width"
            android:layout_height="@dimen/pointer_drawable_height"
            android:layout_marginBottom="@dimen/pointer_margin_top"
            android:layout_marginRight="@dimen/pointer_margin_right"
            android:layout_marginTop="@dimen/pointer_margin_top"
            android:background="@drawable/pointer_green"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/pointer_green"
            android:textColor="@android:color/white"
            android:textSize="@dimen/zero_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pointer_center"
            android:layout_width="@dimen/pointer_drawable_width"
            android:layout_height="@dimen/pointer_drawable_height"
            android:layout_marginBottom="@dimen/pointer_margin_top"
            android:layout_marginRight="@dimen/pointer_margin_right"
            android:layout_marginTop="@dimen/pointer_margin_top"
            android:background="@drawable/pointer_center" />

        <TextView
            android:id="@+id/pointer_right_green"
            android:layout_width="@dimen/pointer_drawable_width"
            android:layout_height="@dimen/pointer_drawable_height"
            android:layout_marginBottom="@dimen/pointer_margin_top"
            android:layout_marginRight="@dimen/pointer_margin_right"
            android:layout_marginTop="@dimen/pointer_margin_top"
            android:background="@drawable/pointer_green"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/pointer_green"
            android:textColor="@android:color/white"
            android:textSize="@dimen/zero_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pointer_right_green_dark"
            android:layout_width="@dimen/pointer_drawable_width"
            android:layout_height="@dimen/pointer_drawable_height"
            android:layout_marginBottom="@dimen/pointer_margin_top"
            android:layout_marginRight="@dimen/pointer_margin_right"
            android:layout_marginTop="@dimen/pointer_margin_top"
            android:background="@drawable/pointer_green_dark"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/pointer_dark_green"
            android:textColor="@android:color/white"
            android:textSize="@dimen/zero_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pointer_right_yellow"
            android:layout_width="@dimen/pointer_drawable_width"
            android:layout_height="@dimen/pointer_drawable_height"
            android:layout_marginBottom="@dimen/pointer_margin_top"
            android:layout_marginRight="@dimen/pointer_margin_right"
            android:layout_marginTop="@dimen/pointer_margin_top"
            android:background="@drawable/pointer_yellow"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/pointer_yellow"
            android:textColor="@android:color/white"
            android:textSize="@dimen/zero_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pointer_right_yellow_dark"
            android:layout_width="@dimen/pointer_drawable_width"
            android:layout_height="@dimen/pointer_drawable_height"
            android:layout_marginBottom="@dimen/pointer_margin_top"
            android:layout_marginRight="@dimen/pointer_margin_right"
            android:layout_marginTop="@dimen/pointer_margin_top"
            android:background="@drawable/pointer_yellow_dark"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/pointer_dark_yellow"
            android:textColor="@android:color/white"
            android:textSize="@dimen/zero_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pointer_right_orange"
            android:layout_width="@dimen/pointer_drawable_width"
            android:layout_height="@dimen/pointer_drawable_height"
            android:layout_marginBottom="@dimen/pointer_margin_top"
