<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:layout_width="@dimen/pointer_drawable_width"
        android:layout_height="@dimen/pointer_drawable_height"
        android:layout_marginTop="@dimen/pointer_margin_top"
        android:layout_marginRight="@dimen/pointer_margin_right"
        android:background="@drawable/pointer_red" />

    <TextView
        android:id="@+id/pointer_left_red_far"
        android:layout_width="@dimen/pointer_drawable_width"
        android:layout_height="@dimen/pointer_drawable_height"
        android:layout_marginTop="@dimen/pointer_margin_top"
        android:layout_marginRight="@dimen/pointer_margin_right"
        android:background="@drawable/pointer_orange_dark" />

    <TextView
        android:id="@+id/pointer_left_red_close"
        android:layout_width="@dimen/pointer_drawable_width"
        android:layout_height="@dimen/pointer_drawable_height"
        android:layout_marginTop="@dimen/pointer_margin_top"
        android:layout_marginRight="@dimen/pointer_margin_right"
        android:background="@drawable/pointer_orange" />

    <TextView
        android:id="@+id/pointer_left_yellow_far"
        android:layout_width="@dimen/pointer_drawable_width"
        android:layout_height="@dimen/pointer_drawable_height"
        android:layout_marginTop="@dimen/pointer_margin_top"
        android:layout_marginRight="@dimen/pointer_margin_right"
        android:background="@drawable/pointer_yellow_dark" />

    <TextView
        android:id="@+id/pointer_left_yellow_close"
        android:layout_width="@dimen/pointer_drawable_width"
        android:layout_height="@dimen/pointer_drawable_height"
        android:layout_marginTop="@dimen/pointer_margin_top"
        android:layout_marginRight="@dimen/pointer_margin_right"
        android:background="@drawable/pointer_yellow" />

    <TextView
        android:id="@+id/pointer_left_green_far"
        android:layout_width="@dimen/pointer_drawable_width"
        android:layout_height="@dimen/pointer_drawable_height"
        android:layout_marginTop="@dimen/pointer_margin_top"
        android:layout_marginRight="@dimen/pointer_margin_right"
        android:background="@drawable/pointer_green_dark" />

    <TextView
        android:id="@+id/pointer_left_green_close"
        android:layout_width="@dimen/pointer_drawable_width"
        android:layout_height="@dimen/pointer_drawable_height"
        android:layout_marginTop="@dimen/pointer_margin_top"
        android:layout_marginRight="@dimen/pointer_margin_right"
        android:background="@drawable/pointer_green" />

    <TextView
        android:id="@+id/pointer_center"
        android:layout_width="@dimen/pointer_drawable_width"
        android:layout_height="@dimen/pointer_drawable_height"
        android:layout_marginTop="@dimen/pointer_margin_top"
        android:layout_marginRight="@dimen/pointer_margin_right"
        android:background="@drawable/pointer_center" />

    <TextView
        android:id="@+id/pointer_right_green_close"
        android:layout_width="@dimen/pointer_drawable_width"
        android:layout_height="@dimen/pointer_drawable_height"
        android:layout_marginTop="@dimen/pointer_margin_top"
        android:layout_marginRight="@dimen/pointer_margin_right"
        android:background="@drawable/pointer_green" />

    <TextView
        android:id="@+id/pointer_right_green_far"
        android:layout_width="@dimen/pointer_drawable_width"
        android:layout_height="@dimen/pointer_drawable_height"
        android:layout_marginTop="@dimen/pointer_margin_top"
        android:layout_marginRight="@dimen/pointer_margin_right"
        android:background="@drawable/pointer_green_dark" />

    <TextView
        android:id="@+id/pointer_right_yellow_close"
        android:layout_width="@dimen/pointer_drawable_width"
        android:layout_height="@dimen/pointer_drawable_height"
        android:layout_marginTop="@dimen/pointer_margin_top"
        android:layout_marginRight="@dimen/pointer_margin_right"
        android:background="@drawable/pointer_yellow" />

    <TextView
        android:id="@+id/pointer_right_yellow_far"
        android:layout_width="@dimen/pointer_drawable_width"
        android:layout_height="@dimen/pointer_drawable_height"
        android:layout_marginTop="@dimen/pointer_margin_top"
        android:layout_marginRight="@dimen/pointer_margin_right"
        android:background="@drawable/pointer_yellow_dark" />

    <TextView
        android:id="@+id/pointer_right_red_close"
        android:layout_width="@dimen/pointer_drawable_width"
        android:layout_height="@dimen/pointer_drawable_height"
        android:layout_marginTop="@dimen/pointer_margin_top"
        android:layout_marginRight="@dimen/pointer_margin_right"
        android:background="@drawable/pointer_orange" />

    <TextView
        android:id="@+id/pointer_right_red_far"
        android:layout_width="@dimen/pointer_drawable_width"
        android:layout_height="@dimen/pointer_drawable_height"
        android:layout_marginTop="@dimen/pointer_margin_top"
        android:layout_marginRight="@dimen/pointer_margin_right"
        android:background="@drawable/pointer_orange_dark" />

    <TextView
        android:layout_width="@dimen/pointer_drawable_width"
        android:layout_height="@dimen/pointer_drawable_height"
        android:layout_marginTop="@dimen/pointer_margin_top"
        android:layout_marginRight="@dimen/pointer_margin_right"
        android:background="@drawable/pointer_red" />

</LinearLayout>