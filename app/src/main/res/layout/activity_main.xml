<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.activities.MainActivity"
    >

    <fragment
        android:id="@+id/map_fragment"
        android:name="casak.ru.geofencer.presentation.ui.fragment.GoogleMapFragment"
        tools:layout="@layout/fragment_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <fragment
        android:id="@+id/map_button_fragment"
        android:name="casak.ru.geofencer.presentation.ui.fragment.MapButtonFragment"
        tools:layout="@layout/fragment_map_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center" />

</FrameLayout>